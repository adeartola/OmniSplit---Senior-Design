<!DOCTYPE html>
<html lang="en" <%= typeof ngApp != 'undefined' ? 'ng-app=' + ngApp : '' %> >
	<head>
        <% if(blocks.title) { %>
            <title><%= blocks.title %></title>
        <% } else { %>
            <title>OmniSplit</title>
        <% } %>

        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-touch-fullscreen" content="yes">
        <meta id="extViewportMeta" name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">

        <!-- ICONS -->
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="/ico/apple-touch-icon-57-precomposed.png">

        <!-- STYLESHEETS -->
	    <link rel="stylesheet" href="stylesheets/bootstrap.min.css">

        <!-- BOILERPLATE STYLESHEET -->
	    <link rel="stylesheet" href="stylesheets/boilerplate.css">

        <!-- CHILDREN STYLESHEETS -->
        <%- stylesheets %>

        <!-- SCRIPTS -->
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	    <script src="javascripts/bootstrap.min.js"></script>

        <!-- ADDITIONAL SCRIPTS IF NECESSARY (ANGULAR) -->
        <% if(typeof ngApp != 'undefined') { %>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.min.js"></script>
        <% } %>

        <!-- BOILERPLATE SCRIPT -->
        <script src="javascripts/boilerplate.js"></script>

        <!-- CHILDREN SCRIPTS -->
        <%- scripts %>
	</head>
	<body <%= typeof ngController != 'undefined' ? 'ng-controller=' + ngController : '' %> >
