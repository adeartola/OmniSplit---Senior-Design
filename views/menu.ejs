<script src="javascripts/menu.js"></script>
<link rel="stylesheet" href="stylesheets/menu.css">
<div class="row-fluid">
    <div class="col-md-4 phone-description">
        <div class="description-box well">
            <h2>Menu Editor</h2>
            <p>Instructions: Add categories to your menu with the </p>
			<button type="button" class="btn btn-info btn-block" id="addCat">Add New Category</button>
			<div id="addInfo"> 
					<div id="newAdd">
					<span class="label">Category: 
					<input id="catAdd" class="labelinput" name="category" ng-model="category.name" required /></span>
					<span class="label">Description: 
					<input class="labelinput" name="categoryDescription" ng-model="category.description" /></span>
					</div>
					<div id="buttonAdd">
					<button style="width: 75px;" type="button" class="btn btn-info btn-block" id="addNow" ng-click="addFoodCategory()">Add</button>
					</div>
			</div>
			<div id="buttonRemove">
					<button type="button" class="btn btn-info btn-block" id="removeAll">Remove All Food Items</button>
			</div>
        </div>
    </div>
    <div class="col-md-4" id="phone-column" ng-controller="phone">
        <img class="phone" id="phone" ng-src="images/iphone.jpg" alt="iPhone" phone-loaded>
        <div class="overlay noselect" id="overlay">
            <div class="phone-header">
                <h3>Categories</h3>
            </div>
            <ul class="ui-sortable" id="left-sortable">
			    <li ng-repeat="item in items" ng-click="clickItem(item.id)" class="ui-state-default ui-sortable-handle" id="item-{{item.id}}"><p>{{item.name}}</p></li>
            </ul>
        </div>
    </div>
    <div class="col-md-4 phone-description">
        <div class="description-box well">
            <h2>Food items</h2>
            <p>Add food items to a given category:</p>
			<span id="activeCat" style="font-size: 24px; color: black;"></span>
			<ul class="foodItems">
                <li ng-repeat="foodItem in foodItems"><p>{{foodItem.name}} ({{foodItem.price | currency:"$"}}) - {{foodItem.description}}</p></li>
            </ul>
			<button type="button" class="btn btn-info btn-block" id="addFood">Add New Food Item to this Category</button>
			<div id="addInfo2"> 
					<div id="newAdd">
					<span class="label">Food Name: 
					<input id="foodName" class="labelinput" name="item-line-1" ng-model="newItem.itemLine1" required /></span>
					<span class="label">Food Description: 
					<input id="foodDesc" class="labelinput" name="item-line-2" ng-model="newItem.itemLine2" required /></span>
					<span class="label">Price: 
					<input id="foodPrice" class="labelinput" name="item-line-3" ng-model="newItem.itemLine3" required /></span>
					</div>
					<div id="buttonAdd">
					    <button style="width: 75px;" type="button" class="btn btn-info btn-block" id="addNow2" ng-click="addFoodItem()">Add</button>
					</div>
			</div>
			
        </div>
    </div>
</div>
