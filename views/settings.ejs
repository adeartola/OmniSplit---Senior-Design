<link rel="stylesheet" href="stylesheets/settings.css">
<h4 class="subhead">Change your settings for your restaurant here.</h3>

<div id="settings-wrapper">
    <div class="namewrap">
        <form id="change-name">
            <span class="head1">Basic Info: </span>
            <br />
        
            <div class="labelwrap">
                <span class="label">Restaurant Name: 
                <input class="labelinput" id="inputname1" name="name" ng-model="name" required /></span>
            </div>
            <div class="labelwrap">
                <span class="label">Restaurant Description: 
                <input class="labelinput" id="inputname2" name="description" ng-model="description" /></span>
            </div>
            <input class="button2" type="button" ng-click="resetName()" name="reset" value="Reset" />
            <input class="button1" type="button" ng-click="submitName()" name="submit" value="Submit" />
        </form>
    </div>
    <br />
    <br />
    
    <form id="change-address">
        <span class="head1">Restaurant Address:</span>
        <br />

        <div class="labelwrap">
            <span class="label">Address Line 1: 
            <input class="labelinput" name="address-line-1" ng-model="address.addressLine1" required /></span>
        </div>
        <div class="labelwrap">
            <span class="label">Address Line 2: 
            <input class="labelinput" name="address-line-2" ng-model="address.addressLine2" /></span>
        </div>
        <div class="labelwrap">
            <span class="label">City: 
            <input class="labelinput" name="city" ng-model="address.city" required /></span>
        </div>
        <div class="labelwrap">
            <span class="label">State: 
            <input class="labelinput" name="state" ng-model="address.state" required /></span>
        </div>
        <div class="labelwrap">
            <span class="label">Zip: 
            <input class="labelinput" name="zip" ng-model="address.zip" required /></span>
        </div>
        <input class="button1" type="button" ng-click="resetAddress()" name="reset" value="Reset" />
        <input class="button1" type="button" ng-click="submitAddress()" name="submit" value="Submit" />
    </form>
</div>
